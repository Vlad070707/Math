<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/first_speach_image_finik"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:src="@drawable/finik"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/first_speach_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#344748"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Виконуючи завдання, ти зможеш отримувати монети, які ти можеш використати у магазині. Бажаю успіхів" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/speach_dialog_ok_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:background="@drawable/back_for_item"
        android:text="Продовжити"
        android:textAllCaps="false"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</LinearLayout>